---
import werbungCo from "../../public/werbung.png";
import inkua from "../../public/inkua.png";
---

<div class="timeline">
  <div class="line">
    <span></span>
    <span></span>
  </div>
  <ul class="cards_experience">
    <article class="card_experience left_content">
      <div class="head_card">
        <a
          class="icon"
          href="https://www.werbungcompany.com/"
          target="_blank"
          rel="noreferrer"
        >
          <img src={werbungCo.src} alt="Werbung Co. Logo" />
        </a>
        <span class="date">2021 - 2022</span>
      </div>
      <div class="content">
        <h2>UI/UX Designer</h2>
        <p class="subtitle">
          As a UI/UX designer at Werbung Co., I played a pivotal role in
          crafting seamless and visually appealing interfaces. Collaborating
          with cross-functional teams, I conducted user research and implemented
          intuitive design solutions.
        </p>
      </div>
    </article>
    <article class="card_experience right_content">
      <div class="head_card">
        <a
          class="icon"
          href="https://inkua.de/"
          target="_blank"
          rel="noreferrer"
        >
          <img src={inkua.src} alt="Inkua logo" />
        </a>
        <span class="date">2023 - present</span>
      </div>
      <div class="content">
        <h2>Frontend Developer</h2>
        <p class="subtitle">
          As a Frontend Developer at Inkua, I bring designs to life, crafting
          intuitive and visually striking user interfaces for seamless and
          engaging experiences.
        </p>
      </div>
    </article>
  </ul>
</div>

<style>
  .timeline {
    height: 100%;
    position: relative;
  }

  .line {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    left: 0%;
    color: blueviolet;
    order:;
    border-radius: 0.5rem;
    height: 85vh;
    width: 4px;
    box-shadow: 0 0 20px 10px #0091ff1b;
    background: linear-gradient(
      to bottom,
      rgb(13, 238, 246),
      rgba(7, 213, 148, 0.61)
    );
  }

  .line span:nth-child(1) {
    position: absolute;
    top: 22%;
  }

  .line span:nth-child(2) {
    position: absolute;
    top: 70%;
  }

  .line span::before {
    content: "";
    display: block;
    background: linear-gradient(to left, #03ffee, #0091ff);
    box-shadow: 0px -3px 15px 0px #6f00ff70 inset;
    width: 0.5rem;
    height: 0.5rem;
    border: 2px solid #03ffee;
    border-radius: 50%;
  }

  /*Card Experience Job*/

  .cards_experience {
    height: 100%;
    position: relative;
    margin-left: 3rem;
  }

  /*CARD INDIVIDUAL WORK */
  .card_experience {
    background-color: #11011e;

    padding: 1rem 0.5rem;
    max-width: 100%;
    border: 1px solid rgba(255, 255, 255, 0.325);
    border-radius: 1rem;
    z-index: 10;
  }

  .card_experience:nth-child(1) {
    position: absolute;
    top: 2%;
    left: -1rem;
  }

  .card_experience:nth-child(2) {
    top: 20rem;
    position: absolute;
    left: -1rem;
  }

  .card_experience .head_card {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card_experience .head_card .icon {
    width: 4rem;
    border-radius: 0.1rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2rem;
  }

  .card_experience .head_card .date {
    line-height: 1.5rem;
    font-size: 1.1rem;
    color: white;
  }

  .card_experience .head_card .icon img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: 0.5rem;
  }

  .card_experience h2 {
    background: linear-gradient(90deg, #a113e3, #0ba5dd);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .content p {
    line-height: 1.5rem;
    font-size: 1rem;
    font-weight: 300;
    color: var(--text);
  }

  @media screen and (min-width: 768px) {
    .experience {
      height: 100vh;
    }
    .line {
      left: 50%;
    }
    .cards_experience {
      margin-left: 0rem;
      padding: 0 0;
    }
    .card_experience {
      width: 45%;
    }

    .card_experience:nth-child(2) {
      position: absolute;
      top: 44%;
      left: 55%;
    }
  }

  @media screen and (min-width: 960px) {
    .right_content::after {
      background-color: #11011e;
      transform: rotate(45deg);
      width: 2rem;
      height: 2rem;
      position: absolute;
      content: "";
      top: 45%;
      left: -1.05rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.325);
      border-left: 1px solid rgba(255, 255, 255, 0.325);
      z-index: -10;
    }

    .left_content::after {
      background-color: #11011e;
      transform: rotate(45deg);
      width: 2rem;
      height: 2rem;
      position: absolute;
      content: "";
      top: 45%;
      right: -1.05rem;
      border-top: 1px solid rgba(255, 255, 255, 0.325);
      border-right: 1px solid rgba(255, 255, 255, 0.325);
      z-index: -10;
    }
  }
</style>
