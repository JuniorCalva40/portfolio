---
import Timeline from "./Timeline.astro";
---

<section class="experience" id="experience">
  <h2 class="title">Experience</h2>
  <div class="blurviolet"></div>
  <Timeline />
</section>

<style>
  .experience {
    display: block;
    position: relative;
    height: auto;
  }

  .blurviolet {
    filter: blur(10rem);
    top: 75%;
    right: 70%;
    position: absolute;
    background-color: #7000ff;
    border-radius: 10%;
    width: 80%;
    height: 3rem;
  }

  @media screen and (min-width: 768px) {
    .experience {
      padding-top: 1rem;
      height: 100vh;
    }
  }
</style>
