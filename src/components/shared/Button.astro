---
interface Props {
  title: string;
  to?: string;
}

const { title, to } = Astro.props;
---

<div class="button">
  <a href={to}>{title}</a>
</div>

<style>
  a {
    width: 100%;
    padding: 1rem 2rem;
    border-radius: 1rem;
    color: white;
    cursor: pointer;
    border: none;
    background: linear-gradient(to left, #195a9b4c, #6f00ff3f);
    font-size: 1rem;
    box-shadow: 0px -3px 15px 0px #6f00ff70 inset;
    transition: transform 0.3s ease;
    transform: translateY(0px);
  }

  .button:hover > a {
    transform: translateY(4px);
  }
</style>
